#include "ft_printf.h"

static int	ft_switchman(va_list args, const char format)
{
	int	len;

	len = 0;
	if (format == 'c')
		len += ft_putchar(va_arg(args, int));
	else if (format == 's')
		len += ft_putstring(va_arg(args, char *));
	else if (format == 'p')
		len += ft_putpointer(va_arg(args, unsigned long long));
	else if (format == 'd' || format == 'i')
		len += ft_putnbr(va_arg(args, int));
	else if (format == 'u')
		len += ft_putnbr_unsigned(va_arg(args, unsigned int));
	else if (format == 'x')
		len += ft_puthexa_lowcase(va_arg(args, unsigned int));
	else if (format == 'X')
		len += ft_puthexa_upcase(va_arg(args, unsigned int));
	else
		len += ft_putchar(format);
	return (len);
}

int	ft_printf(const char *s, ...)
{
	int		i;
	va_list	args;
	int		len;

	i = 0;
	len = 0;
	if (write(1, 0, 0))
		return (-1);
	va_start(args, s);
	while (s[i])
	{
		if (s[i] == '%')
		{
			i++;
			len += ft_switchman(args, s[i]);
		}
		else
			len += ft_putchar(s[i]);
		i++;
	}
	va_end(args);
	return (len);
}
